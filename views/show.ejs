<% include partials/header %>

<h1><%= photo.tag %></h1>

<img src="<%=photo.imgURL%>" alt="">

<% photo.comments.forEach(function(comment){ %>
  <p>
    <strong><%=comment.author.username %></strong> - <%=comment.text%></p>
<% }) %>
<h1 class="text-center">Add new comment</h1>
<form class="" action="/categories/<%=photo._id%>/comment" method="post">
  <div class="form-group">
    <input class="form-control" type="text" name="comment[text]" placeholder="text">
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary btn-block">Submit!</button>
  </div>
</form>

<% include partials/footer %>
