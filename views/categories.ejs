<% include partials/header %>

<link rel="stylesheet" href="/stylesheets/categories.css">

<h1 class="text-center display-3 text-white" style="font-family: 'Pacifico', cursive;">Categories</h1>
<div class="text-center pt-4">

  <form class="form-group" action="/categories" method="post">
    <button class="btn my-btn btn-primary btn-lg mb-4" id="food-btn" name="group" href="/categories" value="food">Food</button>
    <button class="btn my-btn btn-primary btn-lg mb-4" id="lights-btn" name="group" href="/categories" value="lights">Lights</button>
    <button class="btn my-btn btn-primary btn-lg mb-4" id="people-btn" name="group" href="/categories" value="people">People</button>
    <button class="btn my-btn btn-primary btn-lg mb-4" id="travel-btn" name="group" href="/categories" value="travel">Travel</button>
    <button class="btn my-btn btn-primary btn-lg mb-4" id="beach-btn" name="group" href="/categories" value="beach">Beaches</button>
    <button class="btn my-btn btn-primary btn-lg mb-4" id="all-btn" name="group" href="/categories" value="random">Random</button>
    <button class="btn my-btn btn-primary btn-lg mb-4" id="structures-btn" name="group" href="/categories" value="structures">Structures</button>
    <button class="btn my-btn btn-primary btn-lg mb-4" id="floraFauna-btn" name="group" href="/categories" value="nature">Nature</button>
    <button class="btn my-btn btn-primary btn-lg mb-4" id="golden-btn" name="group" href="/categories" value="golden">Golden Hour</button>
  </form>
  <div id="page" class="gallery">
    <% photos.forEach(function(value){ %>
      <button style="padding: 0;border-radius: 0;" type="button" class="gallery-item textOverImage" data-toggle="modal" data-target="#<%=('a' + value.fileName).slice(0,-4)%>">
        <img src="<%=value.smallImgURL%>" class="gallery-item">
        <%console.log(value)%>
      </button>
      <!-- Modal -->
      <div class="modal fade" id="<%=('a' + value.fileName).slice(0,-4)%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title text-center" id="exampleModalLongTitle">Location: <%=value.location%></h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body imgbox">
              <img class="center-fit <%= value.orientation === true ? 'horizontal' : 'vertical' %> rounded img-fluid" src="<%=value.largeImgURL%>" alt="Test" >
            </div>
            <div class="modal-footer">
              <span class="text-left"><i class="fa fa-eye" aria-hidden="true"></i><%=" " + value.views + " " + "Views"%></span>
              <form method="get" action="/categories/<%=value._id%>">
                <button type="submit" class="btn btn-primary"><i class="fa fa-info" aria-hidden="true"></i> More Info</button>
              </form>
            </div>

          </div>
        </div>
      </div>
      <% }); %>
    </div>

    <nav aria-label="...">
      <ul class="pagination justify-content-center">
        <li id='next-page page-item'><a class='page-link' href='javascript:void(0)' aria-label=previous><span aria-hidden=true>&laquo;</span></a></li></ul>
      </nav>
      <!--Scripts -->
      <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js"></script>
      <script type="text/javascript" src="/js/categories.js"></script>
      <% include partials/footer %>
